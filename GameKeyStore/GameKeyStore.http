@GameKeyStore_HostAddress = http://localhost:3001

# WeatherForecast (Minimal API - kept for compatibility)
GET {{GameKeyStore_HostAddress}}/weatherforecast/
Accept: application/json

###

# Game Keys API (Controller-based)
GET {{GameKeyStore_HostAddress}}/api/gamekeys
Accept: application/json

###

# Get specific game key by ID
GET {{GameKeyStore_HostAddress}}/api/gamekeys/1
Accept: application/json

###

# Authentication Endpoints

# Register a new user
POST {{GameKeyStore_HostAddress}}/api/auth/register
Content-Type: application/json

{
  "email": "test@example.com",
  "password": "password123",
  "name": "Test User",
  "username": "testuser"
}

###

# Login user
POST {{GameKeyStore_HostAddress}}/api/auth/login
Content-Type: application/json

{
  "emailOrUsername": "test@example.com",
  "password": "password123"
}

###

# Get current user profile (requires authentication)
# First login to get the JWT token, then replace YOUR_JWT_TOKEN_HERE with the actual token
GET {{GameKeyStore_HostAddress}}/api/auth/me
Accept: application/json
Authorization: Bearer YOUR_JWT_TOKEN_HERE

###

# Test protected endpoint
GET {{GameKeyStore_HostAddress}}/api/auth/protected
Accept: application/json
Authorization: Bearer YOUR_JWT_TOKEN_HERE

###